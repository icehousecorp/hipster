<div class="row-fluid">
  <h2>Person mapping</h2>
  <% if notice %>
  <div class="alert alert-success">
    <%= notice %>
    <a class="close" data-dismiss="alert" href="#">&times;</a>
  </div>
  <% end %>

  <div class="detail">
    <p>
      <b>Harvest</b>
      : <%= @person_mapping.harvest_info %>
    </p>

    <p>
      <b>Pivotal</b>
      : <%= @person_mapping.pivotal_info %>
    </p>

    <p>
      <b>Integration</b>
      : <%= link_to @person_mapping.integration, user_integration_path( @person_mapping.integration.user, @person_mapping.integration )%>
    </p>
  </div>

  <div class="form-submit">
    <%= link_to 'Edit', edit_person_mapping_path(@person_mapping), class: 'btn' %>
    <%= link_to 'Back', integration_person_mappings_path(@person_mapping.integration), class: 'btn' %>
  </div>

</div>
